<div id="<%= dom_id category %>">
  <div class="col-lg-10 col-md-10 col-sm-10 mx-auto">
      <div class="card mb-1 shadow">
        <div class="card-body">
          <div class="d-flex gap-2 align-items-center ml-auto category-card">
             <%= image_tag category.image_url if category.image%>
             <div class="category_name">
             <h2> <%= category.name %></h2>
             </div>
             <div class="category_amount">
              <%= number_to_currency(category.total_amount_for_user(current_user)) %>
             </div>
          <p></p>
          </div>
        </div>
      </div>
  </div>
</div>
